dtml UserProfilePage(app.user.models.User user, string page_title) {
    <!DOCTYPE html>
    <html>
    <head>
        <title>{{ page_title }}</title>
    </head>
    <body>
        <h1>{{ user.username }}</h1>
        <p>Email: {{ user.email }}</p>

        {% if user.age > 30 %}
            <p>Dies soon.</p>
        {% endif %}
    </body>
    </html>
}